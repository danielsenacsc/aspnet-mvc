@model IEnumerable<CadeMeuMedico.Models.Especialidade>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Criar nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDEspecialidade }) |
            @Html.ActionLink("Visualizar", "Details", new { id=item.IDEspecialidade }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IDEspecialidade })
        </td>
    </tr>
}

</table>
